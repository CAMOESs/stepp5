<div class="card ">
  <div class="card-header">
    <h1>ユーザ一覧ページ</h1>
  </div>
  <div class="card-body">
  <table class="table">
  <thead>
    <tr>
      <th scope="col">名前</th>
      <th scope="col">メールアドレス</th>
      <th scope="col">管理者権限</th>
      <th scope="col" >タスク数</th>
      <th colspan="3"></th>
    </tr>
  </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td>
          <% if user.admin %>
            あり
          <% else %>
             なし
          <%end%>
          </td>
          <td><%=user.tasks.count %></td> 
          <td> <a class="btn btn-primary show-user"  href="<%= admin_user_path(user.id) %>">詳細</a></td>
          <td> <a class="btn btn-success edit-user"  href="<%= edit_admin_user_path(user.id) %>">編集</a></td>
          <td> <a class="btn btn-danger destroy-user"  href="<%= admin_user_path(user.id) %>" data-confirm= "本当に削除してもよろしいですか？" data-method="delete">削除</a></td>
        </tr>		
      <% end %>
    </tbody>
    
</table>
    </div>
    <div class="btn-toolbar" role="toolbar" aria-label="Toolbar with button groups">
      <%= paginate @users %>
      </div>
</div>
