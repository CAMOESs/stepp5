
<h1>ログインページ</h1>

<div class="row ">
    <div class="col-md-8 panel-body">
        <div class="form-group">
            <%= form_for :user,url: new_session_path, html: {class: 'form-horizontal'} do |f| %>

                <%= f.label :email, "メールアドレス" , class: "col-md-4 control-label"%>
                <div class="col-md-8">
                    <%= f.email_field :email, class: "form-control " %>
                </div>

                <%= f.label :password_digest, "パスワード" , class: "col-md-4 control-label"%>
                <div class="col-md-8">
                    <%= f.password_field :password_digest, class: "form-control " %>
                </div>

                </br>
                <div class="form-group col-md-8  align-items-center">
                    <button type="submit" id="create-session" class="btn btn-primary">ログイン</button>
                </div>
            
            <% end %>
        </div>
    </div>
    <div class="col-4 form-group ">
        
    </div>
</div>

